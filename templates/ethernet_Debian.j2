{% if item.device | default(false) %}
{% set _ipv6 = item.ipv6 | default(false) %}
{% if item.bootproto == 'static' %}
auto {{ item.device }}
    iface {{ item.device }} inet{% if _ipv6 == true %}6{% endif %} static
{% if item.address is defined %}
    address {{ item.address }}
{% endif %}
{% if item.netmask is defined %}
    netmask {{ item.netmask }}
{% endif %}
{% if item.dns_search is defined %}
    dns-search {{ item.dns_search }}
{% endif %}
{% if item.dns_nameservers is defined %}
    dns-nameservers {{ item.dns_nameservers }}
{% endif %}
{% if item.gateway | default(false) %}
    gateway {{ item.gateway }}
{% endif %}
{% endif %}
{% if item.bootproto == 'dhcp' %}
auto {{ item.device }}
    iface {{ item.device }} inet{% if _ipv6 == true %}6{% endif %} dhcp
{% endif %}
{% if item.route is defined %}
{% for i in item.route %}
    up route add -net {{ i.network }}  netmask {{ i.netmask }} gw {{ i.gateway }} dev {{ item.device }}
{% endfor %}
{% endif %}
{% if options is defined %}
{% for option in options %}
    {{ option.key }} {{ option.value }}
{% endfor %}
{% endif %}

{% endif %}